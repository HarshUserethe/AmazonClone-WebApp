<% include ./Partials/header.ejs %>
<title>Your Orders</title>
<link rel="stylesheet" href="/stylesheets/allProducts.css">



<style>
    .free-area{
        width: 100%;
        height: 83.4%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }
    .cardd{
        width: 35vw;
        height: 35vw;
        background-color: #fff;
        display: flex;
        box-shadow: 2px 2px 8px #00000027;
        justify-content: center;
        align-items: center;
        border-radius: 7px;
        flex-direction: column;
        
    }
    .x{
        font-family: "bookthree";
        margin-left: 2vw;
      
    }

    .y{
       position: absolute;
       right: 0;
       
    }

    table {
			width:90%;
			border:1px solid #b3adad;
			border-collapse:collapse;
			padding:5px;
		}
		table th {
			border:1px solid #b3adad;
			padding:5px;
			background: #f0f0f0;
			color: #313030;
		}
		table td {
			border:1px solid #b3adad;
			text-align:left;
			padding:5px;
			background: #ffffff;
			color: #313030;
		}
        #bbk{
            margin-top: 5vh;
            padding: 4px 40px;
            border: none;
            background-color: #FFC066;
            border: 7px;
            box-shadow: 1px 1px 8px #00000023;
            font-family: "bookthree";
            color: #313030;
            cursor: pointer;
        }

        #ttl{
            font-family: "bookfour";
            font-size: 2vw;
            margin-bottom: 2vh;
        }
</style>

<div class="free-area">
<div class="cardd">
    <span id="ttl">Customer Details</span>
    <table>
		<thead>
		</thead>
		<tbody>
			<tr>
				<td>Name</td>
				<td><%=userDets.name%></td>
			</tr>
			<tr>
				<td>Email</td>
				<td><%=userDets.email%></td>
			</tr>
			<tr>
				<td>Address</td>
				<td><%=userDets.address%></td>
			</tr>
			<tr>
				<td>Contact</td>
				<td><%=userDets.mobile%></td>
			</tr>
			<tr>
				<td>Pin</td>
				<td><%=userDets.postal%></td>
			</tr>
		</tbody>
	</table>

   <a href="/home"><button id="bbk">OK</button> </a>
</div>
</div>