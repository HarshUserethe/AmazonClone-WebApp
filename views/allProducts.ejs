<% include ./Partials/header.ejs %>
<title>Create Product</title>
<link rel="stylesheet" href="/stylesheets/allProducts.css">
<style>
    .imageFrame>img{
        width: 100% !important;
        height: 100% !important;
        object-fit: fill !important;
    }
</style>

<div class="allproducts">

   <% AllProducts.forEach(function(item){ %>
    <div class="myProduct">
        <div class="productImg">
            <img src="<%=item.pimage%>" alt="Product Image">
        </div>
        <div class="productInfo">
            <span class="myProductName"><%=item.pname%></span> <br>
            <span class="myProductDesc">â‚¹<%=item.price%></span>
        </div>
        <div class="myProductBtn">
            <a href="/edit-product/<%=item._id%>" class="icn2"><i class="ri-pencil-fill"></i></a>
           <a href="/delete/<%=item._id%>" class="icn1"> <i class="ri-delete-bin-fill"></i></a>
        </div>
    </div>
   <% }) %>

